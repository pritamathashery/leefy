<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leafy">

    <!-- Permissions (if any) go here -->
    <!-- e.g., if your app requires internet access -->
    <!-- <uses-permission android:name="android.permission.INTERNET"/> -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Leafy">

        <!-- MainActivity is the entry point to your app -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Leafy"
            android:launchMode="singleTop"> <!-- Launch mode set to singleTop to avoid multiple instances of the activity -->

            <!-- Set MainActivity as the entry point of your app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declare PlantRecommendationActivity -->
        <activity
            android:name=".PlantRecommendationActivity"
            android:label="Plant Recommendations"
            android:theme="@style/Theme.Leafy">
            <!-- You can add more intent filters here if you want this activity to be launched by certain actions -->
        </activity>

    </application>

</manifest>
